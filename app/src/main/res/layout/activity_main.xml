<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bcarlson.spptest.MainActivity">

    <Button
        android:id="@+id/btStream"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:text="Stream"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_below="@+id/btConnect"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etAddress"
        android:layout_alignStart="@+id/etAddress"
        android:layout_marginTop="47dp" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="44:6D:57:B7:EE:D1"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="56dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btConnect"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:text="Connect"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="172dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/etAddress"
        android:layout_alignLeft="@+id/btStream"
        android:layout_alignStart="@+id/btStream" />

    <TextView
        android:id="@+id/tvBytesRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btStream"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="0" />

</RelativeLayout>
